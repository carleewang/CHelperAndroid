<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <!--参赛卡号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="参赛卡号"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_cskh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>

    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />



    <!--地区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="所属地区"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_dq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>


    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />



    <!--鸽主姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="参赛鸽主"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_gzxm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>

    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />

    <!--足环号码-->
    <LinearLayout
        android:id="@+id/ll_zhhm_z"
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml"
        android:paddingRight="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="足环号码"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zhhm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/item_tv_title_size2" />

            <TextView
                android:id="@+id/text_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_sgt_zh_bg"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="2dp"
                android:text="修改"
                android:textColor="#59bebd" />

        </RelativeLayout>


    </LinearLayout>


    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />

    <!--电子环号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="电子环号"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_dzhh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>

    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />


    <!--赛鸽羽色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="赛鸽羽色"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_sgys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>


    <!--分割线-->
    <include layout="@layout/view_dividerline_h1" />



    <!--入鹏时间-->
    <!--   android:padding="@dimen/sgt_info_m"-->
    <!--    android:layout_height="@dimen/item_sgt_zh_detail_h"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/org_item_h"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/org_item_ml">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="入棚时间"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/item_tv_title_size1" />

        <TextView
            android:id="@+id/tv_rpsj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/info_item_ml"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/item_tv_title_size2" />
    </LinearLayout>

</LinearLayout>