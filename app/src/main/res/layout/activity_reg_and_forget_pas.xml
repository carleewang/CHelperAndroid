<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ac_ll1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/pas_hl1_mt"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/setting_rl_mlift"
            android:paddingRight="@dimen/setting_rl_mright2"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/color_262626" />

            <EditText
                android:id="@+id/ac_et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入正确的手机号码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/pas_hl1_mt"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="@dimen/setting_rl_mlift"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/color_262626" />

                <EditText
                    android:id="@+id/ac_et_validation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写手机接收验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/ac_ingBtn_validation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_theme"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/pas_hl_mlf"
                android:paddingRight="@dimen/pas_hl_mlf"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/ac_determine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_btn_h"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
        android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
        android:background="@drawable/selector_btn_bg"
        android:scaleType="fitXY"
        android:text="@string/btn_confirm"
        android:textColor="@color/color_btn_tv"
        android:textSize="@dimen/btn_tv_size" />

</RelativeLayout>