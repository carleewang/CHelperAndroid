<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            tools:text="1231/3/4 12:321:21:21"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            tools:text="@string/string_text_message_addressee_number"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:textSize="@dimen/tv_size_gxt"
        android:layout_marginTop="16dp"
        tools:text="123123213333333333333333333333333333333333333
33333333333333333333333333333333333323444444444444444444444444444444444444444333333"/>

    <include layout="@layout/item_line_view_layout"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content"
        android:layout_height="1dp"
        android:layout_width="match_parent" />




</RelativeLayout>