<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="东经" />

        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_cccccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="格式：度，分分秒秒百分秒" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:id="@+id/et_lo1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />


                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="度"
                     />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lola_cen_dialog_img_mlr"
                android:layout_marginRight="@dimen/lola_cen_dialog_img_mlr"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/et_lo2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:inputType="number|numberDecimal"
                    android:maxLength="5"
                    android:id="@+id/et_lo3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="北纬" />

        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_cccccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="格式：度，分分秒秒百分秒" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:id="@+id/et_la1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="3" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="度"
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lola_cen_dialog_img_mlr"
                android:layout_marginRight="@dimen/lola_cen_dialog_img_mlr"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/et_la2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_blue2"
                android:orientation="horizontal"
                android:padding="@dimen/ullage_tool_lola_item_p">

                <EditText
                    android:textSize="12sp"
                    android:inputType="number|numberDecimal"
                    android:maxLength="5"
                    android:id="@+id/et_la3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textSize="12sp"
                    android:textColor="@color/color_cccccc" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!--确定按钮-->
    <TextView
        android:id="@+id/dialog_determine"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_corners_blue"
        android:button="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="确    定"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</LinearLayout>