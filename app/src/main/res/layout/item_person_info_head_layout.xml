<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="姓名"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/tv_size_gxt"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_gxt" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@id/text1"
            android:background="@null"
            android:maxLength="4"
            android:textSize="@dimen/tv_size_gxt" />
    </RelativeLayout>

    <include
        layout="@layout/item_line_view_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividingline_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_gxt" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/phone_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/text2"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/tv_size_gxt" />
    </RelativeLayout>

    <include
        layout="@layout/item_line_view_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividingline_h"/>

    <RelativeLayout
        android:id="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="单位名称"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_gxt" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/text3"
            android:background="@null"
            android:maxLines="2"
            android:textSize="@dimen/tv_size_gxt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="签名"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_gxt" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@id/text4"
            android:background="@null"
            android:hint="签名为3-6位"
            android:maxLength="6"
            android:maxLines="2"
            android:textSize="@dimen/tv_size_gxt" />
    </RelativeLayout>


    <include layout="@layout/view_dividerline_h1" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="身份证正反面或营业执照二选一上传即可"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/tv_size_gxt" />

</LinearLayout>