<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_dialog_item_h"
        android:background="#10c6ae"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_lr"
        android:paddingRight="@dimen/item_lr">

        <!--鸽运通-->
        <LinearLayout
            android:id="@+id/ll_gyt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/service_dialog_item_h"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="鸽运通"
                    android:textColor="@color/color_262626" />

                <TextView
                    android:id="@+id/tv_gyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00到期"
                    android:textColor="@color/color_999999" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/service_dialog_item_ml"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />
            </LinearLayout>

            <!--横向分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

        </LinearLayout>

        <!--训鸽通-->
        <LinearLayout
            android:id="@+id/ll_xgt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/service_dialog_item_h"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="训鸽通"
                    android:textColor="@color/color_262626" />

                <TextView
                    android:id="@+id/tv_xgt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00到期"
                    android:textColor="@color/color_999999" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/service_dialog_item_ml"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />

            </LinearLayout>

            <!--横向分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />
        </LinearLayout>

        <!--网站信息平台  （公棚网站服务，协会网站服务）-->
