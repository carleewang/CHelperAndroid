    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_dialog_item_h"
        android:clickable="true"
        android:gravity="center"
        android:text="确定"
        android:textColor="#10c6ae" />

</LinearLayout>