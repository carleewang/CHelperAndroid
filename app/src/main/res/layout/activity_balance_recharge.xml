<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorViewBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="充值金额"
            android:textColor="@color/color_262626"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_money_income_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入充值金额"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:text="充值方式"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_wxpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_background_clickable_layout_white"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="微信充值"
            android:textColor="#262626"
            android:textSize="16sp" />

        <!-- app:srcCompat="@drawable/svg_ic_pay_weixin"-->
        <!--<android.support.v7.widget.AppCompatImageView-->
        <!--android:id="@+id/iv_wxpay_ok"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_margin="8dp"-->
        <!--app:srcCompat="@drawable/svg_ic_select" />-->
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_pay_way_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/color_262626"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!-- android:button="@drawable/checkbox_blue"-->
        <!--<CheckBox-->
        <!--android:id="@+id/cb_order_protocol_income"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:paddingLeft="8dp"-->
        <!--android:text="我已阅读并同意"-->
        <!--android:textColor="@color/text_color"-->
        <!--android:textSize="@dimen/sp_14" />-->

        <CheckBox
            android:id="@+id/cb_order_protocol_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:button="@drawable/checkbox_blue"
            android:paddingLeft="@dimen/dp_5"
            android:text="我已阅读并同意《"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_order_protocol_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="中鸽网支付协议"
            android:textColor="#63c5c3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textColor="@color/color_262626" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ok_income"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_btn_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
            android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
            android:layout_marginTop="@dimen/setting_outlogin_ptop"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="确定"
            android:textColor="@color/color_btn_tv"
            android:textSize="@dimen/btn_tv_size" />
    </RelativeLayout>


</LinearLayout>