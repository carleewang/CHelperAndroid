<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_color_white_line_box3"
        android:orientation="vertical"
        android:padding="2dp">

        <!--用户信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disignated_set_item_h"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/hygl_zc_it_plr"
            android:paddingRight="@dimen/hygl_zc_it_plr">

            <TextView
                android:id="@+id/tx_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="组别名"
                android:textColor="@color/color_010101"
                android:textSize="@dimen/userinfo_tx_size" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="示例：一把抓"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/userinfo_tx_size" />
        </LinearLayout>

        <!--分割线-->
        <include layout="@layout/view_dividerline_h5" />

        <!--用户信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disignated_set_item_h"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/hygl_zc_it_plr"
            android:paddingRight="@dimen/hygl_zc_it_plr">

            <TextView
                android:id="@+id/tx_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="参赛费"
                android:textColor="@color/color_userinfo_tx"
                android:textSize="@dimen/userinfo_tx_size" />

            <EditText
                android:id="@+id/et_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="示例：100"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/userinfo_tx_size" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="以下插组规则选择其一"
        android:textColor="@color/color_b3b3b3"
        android:textSize="@dimen/hyzc_item_title_size" />

    <LinearLayout
        android:id="@+id/ll_checkbox1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/disignated_set_item_h"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_color_white_line_box3"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/hygl_zc_it_plr"
        android:paddingRight="@dimen/hygl_zc_it_plr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:text="取"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_sure1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_color_white_line_box3"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="示例：1"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="名"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_checkbox2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/disignated_set_item_h"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_color_white_line_box3"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/hygl_zc_it_plr"
        android:paddingRight="@dimen/hygl_zc_it_plr">


        <EditText
            android:id="@+id/et_sure2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_color_white_line_box3"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="示例：10"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="取一"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_checkbox3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/disignated_set_item_h"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_color_white_line_box3"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/hygl_zc_it_plr"
        android:paddingRight="@dimen/hygl_zc_it_plr">


        <EditText
            android:id="@+id/et_sure3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_color_white_line_box3"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="示例：100"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="名内均分"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <!--确定保存-->
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_btn_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
        android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
        android:layout_marginTop="@dimen/setting_outlogin_ptop"
        android:background="@drawable/selector_btn_bg"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="确定保存"
        android:textColor="@color/color_btn_tv"
        android:textSize="15sp" />

</LinearLayout>