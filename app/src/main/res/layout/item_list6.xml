<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item1_z_ll"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <include layout="@layout/view_dividerline_h1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/security_distance_pl"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17dp">


        <TextView
            android:id="@+id/it_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/item_tv_size1" />

        <TextView
            android:id="@+id/it_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/item_tv_size2" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/info_r_mlr"
            android:layout_marginRight="@dimen/info_r_mlr"
            app:srcCompat="@mipmap/arrow_right" />

    </LinearLayout>


</LinearLayout>