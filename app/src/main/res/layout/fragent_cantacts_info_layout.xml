<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="姓名"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_gxt" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_alignStart="@+id/ed2"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:gravity="left"
        android:maxLines="1"
        android:minLines="1"
        android:textSize="@dimen/tv_size_gxt"
        tools:text="333333334444231" />

    <include
        layout="@layout/view_dividerline_h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginBottom="16dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="电话"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_gxt" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignStart="@+id/ed3"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:gravity="left"
        android:inputType="phone"

        android:maxLength="11"
        android:maxLines="1"
        android:minLines="1"
        android:textSize="@dimen/tv_size_gxt"
        tools:text="21231231" />

    <TextView
        android:id="@+id/play_phone"
        android:text="拨打电话"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:visibility="gone"
        android:textSize="14dp"
        android:background="@drawable/button_red_bg"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <include
        layout="@layout/view_dividerline_h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text2" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginBottom="16dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="备注"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_gxt" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/text1"
        android:background="@color/white"
        android:gravity="left"
        android:maxLines="1"
        android:minLines="1"

        android:textSize="@dimen/tv_size_gxt"
        tools:text="21231231" />

    <include
        layout="@layout/view_dividerline_h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text3" />


    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginBottom="16dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="分组选择"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_gxt" />

    <!--<android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text3"
        app:srcCompat="@mipmap/ic_arrow_right"/>-->


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/text3">

        <TextView
            android:id="@+id/ed4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_gxt"
            tools:text="21231231" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:rotation="0"
            app:srcCompat="@mipmap/ic_info_r" />

    </RelativeLayout>

    <include
        layout="@layout/view_dividerline_h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl2" />


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/message_button">

        <TextView
            android:id="@+id/text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>