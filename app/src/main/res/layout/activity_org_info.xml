                    android:layout_marginLeft="@dimen/info_item_ml"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/item_tv_title_size2" />
            </LinearLayout>

            <!--分割线-->
            <include layout="@layout/view_dividerline_h1" />

            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/org_item_h"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fg_home_tv_plr"
                android:paddingRight="@dimen/fg_home_tv_plr">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/string_contact_email"
                    android:textColor="@color/color_262626"
                    android:textSize="@dimen/item_tv_title_size1" />

                <TextView
                    android:id="@+id/tx_contact_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/info_item_ml"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/item_tv_title_size2" />
            </LinearLayout>

            <!--分割线-->
            <include layout="@layout/view_dividerline_h1" />

            <!--详细地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/org_item_h"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fg_home_tv_plr"
                android:paddingRight="@dimen/fg_home_tv_plr">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/string_contact_address"
                    android:textColor="@color/color_262626"
                    android:textSize="@dimen/item_tv_title_size1" />

                <TextView
                    android:id="@+id/tx_contact_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/info_item_ml"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/item_tv_title_size2" />
            </LinearLayout>

            <!--分割线-->
            <include layout="@layout/view_dividerline_h1" />

            <!--注册时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/org_item_h"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fg_home_tv_plr"
                android:paddingRight="@dimen/fg_home_tv_plr">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/string_contact_time_regis"
                    android:textColor="@color/color_262626"
                    android:textSize="@dimen/item_tv_title_size1" />

                <TextView
                    android:id="@+id/tx_contact_time_regis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/info_item_ml"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/item_tv_title_size2" />
            </LinearLayout>

            <!--分割线-->
