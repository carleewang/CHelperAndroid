<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/colorWhite"
    app:cardElevation="@dimen/cardview_yy">

    <LinearLayout
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_operator_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="2017-03-28 12:30:30"
            android:textColor="@color/color_theme"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <!--分割线-->
            <include layout="@layout/view_dividerline_h" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_operator_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:text="用户ID："
            android:textColor="@color/colorText"
            android:textSize="14sp" />

        <com.cpigeon.cpigeonhelper.ui.MyTextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_operator_operatorlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="操作日志："
            android:textColor="@color/colorText"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <!--分割线-->
            <include layout="@layout/view_dividerline_h" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_operator_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="8dp"
            android:text="IP:155.235.23.56"
            android:textColor="@color/colorText"
            android:textSize="13sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>