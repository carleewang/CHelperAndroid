        android:id="@+id/userinfo_sure"
        android:layout_marginLeft="@dimen/userinfo_imgbtn_lf"
        android:layout_marginRight="@dimen/userinfo_imgbtn_lf"
        android:layout_marginBottom="@dimen/userinfo_imgbtn_b"
        android:layout_alignParentBottom="true"
