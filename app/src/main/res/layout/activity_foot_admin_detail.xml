<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/color_theme" />

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_color_white_box2"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/ll_foot"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="足环号码"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_foot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/ic_info_r" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

            <LinearLayout
                android:id="@+id/ll_dove_lord_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鸽主姓名"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dove_lord_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

            <!--出售状态-->
            <LinearLayout
                android:id="@+id/ll_status_sell"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出售状态"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_status_sell"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:visibility="invisible"
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

            <!--缴费状态-->
            <LinearLayout
                android:id="@+id/ll_status_paying"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交费状态"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_status_paying"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />


            </LinearLayout>

            <View
                android:id="@+id/view_status_paying"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="足环价格"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_foot_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/ic_info_r" />

            </LinearLayout>

            <View
                android:id="@+id/view_agent_take_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dividingline_h"
                android:background="@color/dividingline" />

            <!--代售点-->
            <LinearLayout
                android:id="@+id/ll_agent_take_place"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代售点"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_agent_take_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/gpsg_jt_r_wh"
                    android:layout_height="@dimen/gpsg_jt_r_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/info_r_mlr"
                    android:paddingLeft="@dimen/item_tv_pr1"
                    android:paddingRight="@dimen/item_tv_pr1"
                    app:srcCompat="@mipmap/ic_info_r" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llz_sgyl"
            android:orientation="vertical"
            android:layout_below="@+id/ll_head"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_color_white_box2"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"

            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_sgyl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上笼验鸽"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!--拍照-->
                <ImageButton
                    android:id="@+id/it_sgt_r_btn"
                    android:layout_width="@dimen/sgt_list_img_h"
                    android:layout_height="@dimen/sgt_list_img_h"
                    android:layout_marginLeft="@dimen/sgt_list_img_ml"
                    android:layout_marginRight="@dimen/sgt_list_img_mr"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@mipmap/photo_img" />

            </LinearLayout>


            <ImageView
                android:layout_margin="@dimen/dimens_img_m"
                android:scaleType="centerCrop"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_below="@+id/ll_sgyl"
                android:id="@+id/img_slyg"
                android:layout_width="100dp"
                android:layout_height="110dp" />

            <!--视频展示-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_sgyl"
                android:layout_below="@+id/ll_sgyl"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="@dimen/dimens_img_m">

                <!--视频-->
                <FrameLayout
                    android:paddingBottom="10dp"
                    android:id="@+id/fl_sgyl"
                    android:layout_width="100dp"
                    android:layout_height="110dp" />

                <ImageView
                    android:id="@+id/list_item_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                  />

                <ImageView
                    android:id="@+id/list_item_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/video_click_play_selector" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <!--btn_add-->
    <Button
        android:id="@+id/btn_del"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_btn_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
        android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
        android:layout_marginTop="@dimen/setting_outlogin_ptop"
        android:background="@drawable/selector_btn_bg"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="删除"
        android:textColor="@color/color_btn_tv"
        android:textSize="@dimen/btn_tv_size" />

</LinearLayout>
