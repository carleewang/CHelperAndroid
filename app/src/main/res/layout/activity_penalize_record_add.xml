<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--处罚时间-->
        <LinearLayout
            android:id="@+id/ll_cfsj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hygl_zc_it_h"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/hygl_zc_it_plr"
            android:paddingRight="@dimen/hygl_zc_it_plr">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr2"
                android:text="处罚时间"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/hyzc_item_title_size" />


            <TextView
                android:id="@+id/tv_cfsj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/hyzc_item_hint_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/gpsg_jt_r_wh"
                android:layout_height="@dimen/gpsg_jt_r_wh"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/item_tv_pr1"
                android:paddingRight="@dimen/item_tv_pr1"
                app:srcCompat="@mipmap/ic_info_r" />

        </LinearLayout>

        <include layout="@layout/view_dividerline_h5" />


        <!--处罚结果-->
        <LinearLayout
            android:id="@+id/ll_cfjg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hygl_zc_it_h"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/hygl_zc_it_plr"
            android:paddingRight="@dimen/hygl_zc_it_plr">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr2"
                android:text="处罚结果"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/hyzc_item_title_size" />


            <TextView
                android:id="@+id/tv_cfjg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/hyzc_item_hint_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/gpsg_jt_r_wh"
                android:layout_height="@dimen/gpsg_jt_r_wh"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/item_tv_pr1"
                android:paddingRight="@dimen/item_tv_pr1"
                app:srcCompat="@mipmap/ic_info_r" />

        </LinearLayout>

        <include layout="@layout/view_dividerline_h5" />


        <!--处罚原因-->
        <LinearLayout
            android:id="@+id/ll_cfyy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hygl_zc_it_h"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/hygl_zc_it_plr"
            android:paddingRight="@dimen/hygl_zc_it_plr">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr2"
                android:text="处罚原因"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/hyzc_item_title_size" />


            <TextView
                android:id="@+id/tv_cfyy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="right"
                android:hint="请填写1-20个字符"
                android:paddingEnd="@dimen/hygl_zc_it_tv_pr"

                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/hyzc_item_hint_size" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/gpsg_jt_r_wh"
                android:layout_height="@dimen/gpsg_jt_r_wh"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/item_tv_pr1"
                android:paddingRight="@dimen/item_tv_pr1"
                app:srcCompat="@mipmap/ic_info_r" />

        </LinearLayout>


        <!--确定添加-->
        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_btn_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
            android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
            android:layout_marginTop="@dimen/setting_outlogin_ptop2"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="@string/btn_out_add"
            android:textColor="@color/color_btn_tv"
            android:textSize="@dimen/btn_tv_size" />

    </LinearLayout>

    <include layout="@layout/layout_bottom_del" />

</LinearLayout>