<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--输入新密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pas_hl_h"
            android:layout_marginLeft="@dimen/pas_hl_mlf"
            android:layout_marginRight="@dimen/pas_hl_mlf"
            android:layout_marginTop="@dimen/pas_hl1_mt"
            android:background="@drawable/ac_imp_border"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/change_pas_et_new"
                android:imeOptions="actionNext"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingLeft="@dimen/pas_et_pl"
                android:singleLine="true"
                android:textColorHint="@color/reg_ColorHint"
                android:textSize="@dimen/sp_14" />


            <ImageButton
                android:id="@+id/modify_pas_PasHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/log_hint_img_pr"
                android:background="@null"
                android:src="@mipmap/hide2x" />
        </LinearLayout>


        <!--再次输入密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pas_hl_h"
            android:layout_marginLeft="@dimen/pas_hl_mlf"
            android:layout_marginRight="@dimen/pas_hl_mlf"
            android:layout_marginTop="@dimen/pas_hl2_mt"
            android:background="@drawable/ac_imp_border"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_new_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/change_pas_et_new_confirm"
                android:imeOptions="actionNext"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingLeft="@dimen/pas_et_pl"
                android:singleLine="true"
                android:textColorHint="@color/reg_ColorHint"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pas_hint_mr"
            android:layout_marginTop="@dimen/pas_hint_mt"
            android:gravity="right"
            android:text="@string/str_play_mondify_hint" />

    </LinearLayout>


    <!--确定-->
    <Button
        android:id="@+id/ac_modify_determine"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/item_btn_h"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pas_btn_confirm_mb"
        android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
        android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
        android:background="@drawable/selector_btn_bg"
        android:text="@string/btn_confirm"
        android:textColor="@color/color_btn_tv"
        android:textSize="@dimen/btn_tv_size" />

</RelativeLayout>