                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/color_home_it_title_bg" />

        </LinearLayout>

    </ScrollView>

