                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingBottom="@dimen/home_btn_ptb"
                            android:paddingTop="@dimen/home_btn_ptb"
                            android:scaleType="centerInside" />

                        <!--分割线-->
                        <include layout="@layout/view_dividerline_v" />

                        <ImageButton
                            android:id="@+id/wdfw_btn6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingBottom="@dimen/home_btn_ptb"
                            android:paddingTop="@dimen/home_btn_ptb"
                            android:scaleType="centerInside" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!--授权-->
            <LinearLayout
                android:id="@+id/ll_wdfw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!--内容3-->
                <TextView
                    android:id="@+id/home_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_mc"
                    android:background="@color/color_home_it_title_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/fg_home_tv_mlr1"
                    android:paddingRight="@dimen/fg_home_tv_mlr1"
                    android:text="授权管理"
                    android:textColor="@color/color_org"
                    android:textSize="@dimen/fg_standard_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_content_h"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/home_imgbtn10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:paddingBottom="@dimen/home_btn_ptb"
                        android:paddingTop="@dimen/home_btn_ptb"
                        android:scaleType="centerInside"
                        android:src="@mipmap/shouquanpz" />

                    <!--分割线-->
                    <include layout="@layout/view_dividerline_v" />

                    <ImageButton
                        android:id="@+id/home_imgbtn11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:paddingBottom="@dimen/home_btn_ptb"
                        android:paddingTop="@dimen/home_btn_ptb"
                        android:scaleType="centerInside" />

                    <!--分割线-->
                    <include layout="@layout/view_dividerline_v" />

                    <ImageButton
                        android:id="@+id/home_imgbtn12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:paddingBottom="@dimen/home_btn_ptb"
                        android:paddingTop="@dimen/home_btn_ptb"
                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

            <!--赛鸽工具-->
            <LinearLayout
                android:id="@+id/ll_sggj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--内容3-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_mc"
                    android:background="@color/color_home_it_title_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/fg_home_tv_mlr1"
                    android:paddingRight="@dimen/fg_home_tv_mlr1"
                    android:text="赛鸽工具"
                    android:textColor="@color/color_org"
                    android:textSize="@dimen/fg_standard_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_content_h"
                    android:layout_weight="4"
