                    android:paddingLeft="@dimen/fg_home_tv_mlr1"
                    android:paddingRight="@dimen/fg_home_tv_mlr1"
                    android:text="我的服务"
                    android:textColor="@color/color_org"
                    android:textSize="@dimen/fg_standard_15" />

                <!--我的服务第一排-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_content_h"
                    android:layout_weight="4"
