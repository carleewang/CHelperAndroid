                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingBottom="@dimen/home_btn_ptb"
                            android:paddingTop="@dimen/home_btn_ptb"
                            android:scaleType="centerInside" />

                        <!--分割线-->
                        <include layout="@layout/view_dividerline_v" />

                        <ImageButton
                            android:id="@+id/home_imgbtn15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingBottom="@dimen/home_btn_ptb"
                            android:paddingTop="@dimen/home_btn_ptb"
                            android:scaleType="centerInside" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--我的服务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--内容3-->
                <TextView
                    android:id="@+id/home_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_mc"
