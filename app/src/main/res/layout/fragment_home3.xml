                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!--分割线-->
                    <include layout="@layout/view_dividerline_h5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_content_h"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/wdfw_btn4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingBottom="@dimen/home_btn_ptb"
                            android:paddingTop="@dimen/home_btn_ptb"
                            android:scaleType="centerInside" />

                        <!--分割线-->
                        <include layout="@layout/view_dividerline_v" />

                        <ImageButton
                            android:id="@+id/wdfw_btn5"
