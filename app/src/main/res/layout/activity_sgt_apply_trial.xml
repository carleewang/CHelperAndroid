<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--入棚开始时间-->
    <LinearLayout
        android:id="@+id/ll_start_time"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/security_distance_pl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/it_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="入棚开始时间"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/item_tv_size1" />


            <TextView
                android:id="@+id/tv_rp_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="8dp"
                android:text="0000-00-00"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/item_tv_size2" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/info_r_mlr"
                android:layout_marginRight="@dimen/info_r_mlr"
                app:srcCompat="@mipmap/arrow_right" />

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_dividerline_h1" />

    <!--可容羽数-->
    <LinearLayout
        android:id="@+id/ll_wddd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/security_distance_pl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="可容羽数"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/item_tv_size1" />


            <TextView
                android:id="@+id/tv_krys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/item_tv_size2" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/info_r_mlr"
                android:layout_marginRight="@dimen/info_r_mlr"
                app:srcCompat="@mipmap/arrow_right" />

        </LinearLayout>


    </LinearLayout>


    <!--申请试用-->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_btn_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/pas_btn_confirm_mlf"
        android:layout_marginRight="@dimen/pas_btn_confirm_mlf"
        android:layout_marginTop="@dimen/setting_outlogin_ptop"
        android:background="@drawable/selector_btn_bg"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/btn_sgt_apply_trial"
        android:textColor="@color/color_btn_tv"
        android:textSize="@dimen/btn_tv_size" />


</LinearLayout>