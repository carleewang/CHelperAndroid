<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--找到控件-->
    <LinearLayout
        android:id="@+id/ll_search_succeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ac_search_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_auth_ll_mlr"
        android:paddingRight="@dimen/item_auth_ll_mlr">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <!--用户头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/add_it_img_userheads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/geyuntong2x" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/item_auth_center_ll_h"
            android:layout_marginLeft="@dimen/item_auth_center_ll_mlr"
            android:layout_marginRight="@dimen/item_auth_center_ll_mlr"
            android:layout_weight="7"
            android:orientation="vertical">


            <!--用户名-->
            <TextView
                android:id="@+id/add_auth_tv_userName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="用户名"
                android:textColor="@color/color_item_auth_name"
                android:textSize="@dimen/item_auth_center_name_size" />


            <!--电话号码-->
            <TextView
                android:id="@+id/add_auth_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="159123456789"
                android:textSize="@dimen/item_auth_center_content_size" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">
            <!--添加授权-->
            <ImageButton
                android:id="@+id/imgbtn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/item_auth_btn_ml"
                android:background="@null"
                tools:src="@mipmap/ic_empower_photo"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>