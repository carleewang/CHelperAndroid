<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_default_bg">

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="@dimen/big_large_horizontal_margin"
        android:layout_marginStart="@dimen/big_large_horizontal_margin"
        android:layout_marginTop="@dimen/big_large_horizontal_margin"
        android:background="@drawable/shape_solid_white_radius_0_stroke_cccccc"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:maxLines="6"
        android:minLines="6"
        android:padding="@dimen/medium_vertical_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/big_large_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_solid_white_radius_100_stroke_cccccc"
        android:paddingBottom="@dimen/small_vertical_margin"
        android:paddingLeft="@dimen/big_large_horizontal_margin"
        android:paddingRight="@dimen/big_large_horizontal_margin"
        android:paddingTop="@dimen/small_vertical_margin"
        android:text="回复"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text_size" />

</RelativeLayout>