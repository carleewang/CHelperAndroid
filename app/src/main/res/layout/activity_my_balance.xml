<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_my_balance" />

    <TextView
        android:textColor="@color/color_262626"
        android:id="@+id/tv_ye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="0元" />

    <Button
        android:textColor="@color/color_ffffff"
        android:id="@+id/btn_cz"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/item_btn_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/yue_btn_bg"
        android:text="我要充值" />

    <Button
        android:textColor="@color/color_71d0cc"
        android:id="@+id/btn_mx"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/item_btn_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/mx_btn_bg"
        android:text="充值明细" />

</LinearLayout>